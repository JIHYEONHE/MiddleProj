@charset "UTF-8";

/*  ------------ Global CSS ------------ */




* {
	box-sizing: border-box;
	margin: 0%;
	padding: 0%;
}


main {
	width: 1080px;
	min-height: 83vh;
	margin: 30px auto;
}

h1 {
	display: inline-block;
	width: fit-content;
}

.h1Container, .submitContainer{
	display: flex;
	justify-content: center;
}



form {
	margin: 30px auto;
	width: fit-content;
}


label {
	display: inline-block;
	width: 80px;
}


input[type=text] {
	height: 30px;
	width: 500px;
}

textarea {
	width: 500px;
	height: 200px;
	padding: 10px;
	resize: both;
}


.inputContainer {
	margin-bottom: 10px;
	display: flex;
	justify-content: center;
}

.idContainer {
	margin-bottom: 10px;
	display: flex;
	justify-content: center;
}

input[type=submit] {
	margin-top: 30px;
	width: 100px;
	height: 30px;
}

